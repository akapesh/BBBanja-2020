extends layout
block content 
		
		.allcontent
			h2 Customer Register
			form.form-inline(action="/register/update")
				.form-group.col-md-6
					.form-group.mx-sm-3.mb-2
						input#fname.form-control(type="text" placeholder="First Name")
					button.btn.btn-outline-warning.mb-2(type="submit")
						| Update
			form.form-inline(action="/user/customerList")
				.form-group.col-md-6
					.form-group.mx-sm-3.mb-2
						input.form-control(type="text"  name="fname" placeholder=" Customer First Name")
					button.btn.btn-outline-warning.mb-2(type="submit")
						| Search		
			.container(style="width:74vw;")
				.row
					.col-md-12
						table.table.table-lg.table-hover
							thead.thead(style="background-color:#392600; color: #ffc800; ")
								tr
									//th(scope="col") #
									th(scope="col") First Name
									th(scope="col") Last Name
									th(scope="col") MobileNo.
									th(scope="col") NIN
									th(scope="col") Refree's Name
									th(scope="col") Refree'sNo. 
									th(scope="col") Stage Name
									th(scope="col") Type of Ride
									th(scope="col" colspan="2") Down Payment </br > (Boda-Boda | TukTuk)
									th(scope="col") Other Loans
							tbody
								each customer in customers
									tr
									td #{customer.fname}
									td #{customer.lname}
									td #{customer.phone}
									td #{customer.nin}
									td #{customer.reffname}
									td #{customer.reflname}
									td #{customer.stage}
									td #{customer.ride}
									td #{customer.downpay}
									//td #{customer.tdownpay}
									td #{customer.otherloan}
										form(method="post" action='/register/delete2')
											input(type="hidden", placeholder="", name="id", value=customer._id)
											button.btn.btn-warning.btn-block(type="submit") Delete